          </form>
        </div>
      </div>
      #end
    </div>
    <hr>
    <div>
      <h4><strong><em> $user.getName()'s <em>BMX</em Tricks:</strong></em></h4>
      #foreach($bmxTrick in $userBmxTricks)
      <div class="flex-container">
        <div class="btn-group bottomMargin">
          <form class="btn btn-custom" action="/update/trick/$bmxTrick.getId()" method="get">
            <input id="trickId" name="trickId" type="hidden" value="$bmxTrick.getId()">
            <button type="submit" id="$bmxTrick.getId()" class="btn-custom"><i class="fa fa-cog"></i> Update</button>
          </form>
          <p class="btn btn-custom thePadding">Category: $bmxTrick.getCategoryName()</p>
          <p class="btn btn-custom thePadding">Name: $bmxTrick.getName() </p>
          <p class="btn btn-custom thePadding">Rating: $bmxTrick.getRatingName() </p>
          <p class="btn btn-custom thePadding">Date: $bmxTrick.getDate()</p>
          <form class="btn btn-custom" action="/delete/trick/$bmxTrick.getId()" method="post">
            <input id="trickId" name="trickId" type="hidden" value="$bmxTrick.getId()">
            <button type="submit" id="$bmxTrick.getId()" class="btn-custom"><i class="fa fa-trash-o fa-lg"></i> Delete Trick</button>
          </form>
        </div>
      </div>
      #end
    </div>
    <hr>
  </div>
</div>
