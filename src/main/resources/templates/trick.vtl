<div class = "main">
  <div class="navbar navbar-inverse navbar-fixed-top transparentBackground">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse center">
        <ul class="nav navbar-nav">
          <li><a href="/home">Home</a></li>
          <li><a href="/skateboarding">Skateboard</a></li>
          <li><a href="/snowboarding">Snowboard</a></li>
          <li><a href="/bmx">BMX</a></li>
          <li><a href="/skiing">Ski</a></li>
          <li class="active"><a href="/add/trick">Add Trick</a></li>
          <li><a href="/">Logout</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class = "container">
    <h3 class="topMargin">Record Tricks</h3>
    <div class = "cover">
      <form action="/add/trick" method="post" class="flex-form">
        <select id='sport_id' name='sport_id' type='text' required>
          #foreach($sport in $sports)
          <option value="$sport.getId()">$sport.getName()</option>
          #end
        </select>
        <select id='category_id' name='category_id' type='text' required>
          #foreach($category in $categories)
          <option value="$category.getId()">$category.getName()</option>
          #end
        </select>
        <input id="trickName" name="trickName" type="search" placeholder="Trick Name" required>
        <select id='trickRating' name='trickRating' type='text' required>
          #foreach ($rating in $ratings)
          <option value="$rating.getId()">$rating.getName()</option>
          #end
        </select>
        <input id="trickDate" name="trickDate" type="date" required>
        <button type="submit" id="trickbutton" class="btn btn-danger">Add Trick</button>
      </form>
    </div>
    <h3>$user.getName()'s Trick Library:</h3>
    <hr>
    <div>

      <h4><strong><em> $user.getName()'s <em>Skateboard</em> Tricks:</strong></em></h4>
      #foreach($skateTrick in $userSkateTricks)
      <div class="flex-container">
        <div class="btn-group bottomMargin">
          <form class="btn btn-custom" action="/update/trick/$skateTrick.getId()" method="get">
            <input id="trickId" name="trickId" type="hidden" value="$skateTrick.getId()">
            <button type="submit" id="$skateTrick.getId()" class="btn-custom"><i class="fa fa-cog"></i> Update</button>
          </form>
          <p class="btn btn-custom thePadding">Category: $skateTrick.getCategoryName()</p>
          <p class="btn btn-custom thePadding">Name: $skateTrick.getName() </p>
          <p class="btn btn-custom thePadding">Rating: $skateTrick.getRatingName() </p>
          <p class="btn btn-custom thePadding">Date: $skateTrick.getDate()</p>
          <form class="btn btn-custom" action="/delete/trick/$skateTrick.getId()" method="post">
            <input id="trickId" name="trickId" type="hidden" value="$skateTrick.getId()">
            <button type="submit" id="$skateTrick.getId()" class="btn-custom"><i class="fa fa-trash-o fa-lg"></i> Delete Trick</button>
          </form>
        </div>
      </div>
      #end
    </div>
    <hr>
    <div>
      <h4><strong><em> $user.getName()'s <em>Snowboard</em> Tricks:</strong></em></h4>
      #foreach($snowTrick in $userSnowTricks)
      <div class="flex-container">
        <div class="btn-group bottomMargin">
          <form class="btn btn-custom" action="/update/trick/$snowTrick.getId()" method="get">
            <input id="trickId" name="trickId" type="hidden" value="$snowTrick.getId()">
            <button type="submit" id="$snowTrick.getId()" class="btn-custom"><i class="fa fa-cog"></i> Update</button>
          </form>
          <p class="btn btn-custom thePadding">Category: $snowTrick.getCategoryName()</p>
          <p class="btn btn-custom thePadding">Name: $snowTrick.getName() </p>
          <p class="btn btn-custom thePadding">Rating: $snowTrick.getRatingName() </p>
          <p class="btn btn-custom thePadding">Date: $snowTrick.getDate()</p>
          <form class="btn btn-custom" action="/delete/trick/$snowTrick.getId()" method="post">
            <input id="trickId" name="trickId" type="hidden" value="$snowTrick.getId()">
            <button type="submit" id="$snowTrick.getId()" class="btn-custom"><i class="fa fa-trash-o fa-lg"></i> Delete Trick</button>
          </form>
        </div>
      </div>
      #end
    </div>
    <hr>
    <div>
      <h4><strong><em> $user.getName()'s <em>Skiing<em> Tricks:</strong></em></h4>
      #foreach($skiTrick in $userSkiTricks)
      <div class="flex-container">
        <div class="btn-group bottomMargin">
          <form class="btn btn-custom" action="/update/trick/$skiTrick.getId()" method="get">
            <input id="trickId" name="trickId" type="hidden" value="$skiTrick.getId()">
            <button type="submit" id="$skiTrick.getId()" class="btn-custom"><i class="fa fa-cog"></i> Update</button>
          </form>
          <p class="btn btn-custom thePadding">Category: $skiTrick.getCategoryName()</p>
          <p class="btn btn-custom thePadding">Name: $skiTrick.getName() </p>
          <p class="btn btn-custom thePadding">Rating: $skiTrick.getRatingName() </p>
          <p class="btn btn-custom thePadding">Date: $skiTrick.getDate()</p>
